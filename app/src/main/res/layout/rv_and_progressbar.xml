<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_notification_top"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
    <EditText
        android:id="@+id/searchEditNotification"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:background="@drawable/square"
        android:hint="@string/search_here"
        android:layout_marginTop="15dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="25dp"
        android:paddingRight="30dp"
        tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/SearchBtn"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:textSize="40sp"
            app:drawableEndCompat="@drawable/baseline_search_24" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_notification_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_notification_top"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp" />

    <ProgressBar
        android:id="@+id/idProgressBar1"
        android:layout_width="62dp"
        android:layout_height="59dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rv_notification_list"
        app:layout_constraintVertical_bias="0.834"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>